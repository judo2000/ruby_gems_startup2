.card 
  .card-header 
    = comment.created_at.strftime('%m-%d-%Y - %H:%m')
    (#{time_ago_in_words(comment.created_at)} ago)
    by
    = link_to comment.user, user_path(comment.user)
    = link_to "Delete", [@course, @lesson, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
  .card-body 
    = comment.content