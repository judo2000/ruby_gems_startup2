.card 
  .card-header 
    = comment.created_at.strftime('%m-%d-%Y - %H:%m')
    (#{time_ago_in_words(comment.created_at)} ago)
    by
    = link_to comment.user, user_path(comment.user)
    - if policy(comment).destroy?
      = link_to [@course, @lesson, comment], method: :delete, data: { confirm: 'Are you sure?' } do
        .text-danger.fa.fa-trash
  .card-body 
    = comment.content