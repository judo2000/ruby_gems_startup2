- content_for :title do 
  Judo2000 
  \|
  Ruby Gems Startup

.jumbotron
  .display-4
    What do you want to learn today?
  
  .p-4
  - if current_user
    = search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f|
      .input-group
        = f.search_field :title_cont, class: 'form-control-sm', style: 'float: left; width: 150px; ', placeholder: 'Find a course', :autocomplete => :off
        %span.input-group-append
          %button.btn.btn-primary.btn-sm{:type => "submit"}
            %span.fa.fa-search{"aria-hidden" => "true"}   

  -else
    %h3.text-shadow Join to access all the courses
    .p-2
    = link_to 'Register', new_user_registration_path, class: 'btn btn-custompurple btn-lg'
    = link_to 'Login', new_user_session_path, class: 'btn btn-custompurple btn-lg'
    .row.mt-1
    = link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-danger btn-lg mr-1' do
      Continue with
      .fab.fa-google
    .row.mt-1
    = link_to user_github_omniauth_authorize_path, class: 'btn btn-dark btn-lg mr-1' do
      Continue with
      .fab.fa-github
    .row.mt-1
    = link_to user_facebook_omniauth_authorize_path, class: 'btn btn-primary btn-lg mr-1' do
      Continue with
      .fab.fa-facebook
.card-group 
  .card.card-body 
    %h1 
      .fa.fa-graduation-cap 
    = Course.count 
    online courses
    .row 
    Explore a variety of topics 
  .card.card-body 
    %h1 
      .fa.fa-chalkboard-teacher 
    = Course.distinct.count(:user_id)
    expert instructors 
    .row 
    Find the right instructor for you
  .card.card-body 
    %h1 
      .fa.fa-user-graduate 
    = User.count 
    active learners 
    .row 
    Join knowledge sharing community 
  .card.card-body 
    %h1 
      .fa.fa-infinity 
    Lifetime %access 
    .row 
    Learn on your schedule 

%hr
- if current_user
  %h2
    .fa.fa-user-graduate
    Continue learning 
  .card-columns 
    - @purchased_courses.each do |course|
      = render 'courses/course', course: course
  .text-right
    = link_to 'See all my purchased courses', purchased_courses_path
  %hr
%h2
  .fa.fa-chart-line
  Popular courses 
.card-columns 
  - @popular.each do |course|
    = render 'courses/course', course: course
.text-right
  = link_to 'More popular courses', courses_path(courses_search: {s: 'enrollment_count des' })
%hr
%h2
  .fa.fa-star
  Top rated courses 
.card-columns 
  - @top_rated.each do |course|
    = render 'courses/course', course: course
.text-right
  = link_to 'Best rated courses', courses_path(courses_search: {s: 'rating des' })
%hr
%h2
  .fa.fa-clock
  Latest courses 
.card-columns 
  - @latest.each do |course|
    = render 'courses/course', course: course
.text-right
  = link_to 'Most recent courses', courses_path(courses_search: {s: 'created_at des' })
%hr
%h2
  .fa.fa-comment
  What our students have to say
.card-columns 
  - @latest_good_reviews.each do |enrollment|
    = render 'enrollments/enrollment', enrollment: enrollment