.card 
  .card-header 
    .fa.fa-user
    - if user.online?
      .text-success.fa.fa-circle
    - else 
      .text-danger.fa.fa-circle
    = link_to user.email, user_path(user)
  .card-footer
    Signed Up 
    = time_ago_in_words(user.created_at)
    ago
  .card-footer 
    = 'sign_in_count'.humanize
    = user.sign_in_count
    .row
    = 'current_sign_in_at'.humanize
    = user.current_sign_in_at
    .row
    = 'last_sign_in_at'.humanize
    = user.last_sign_in_at
    .row
    = 'current_sign_in_ip'.humanize
    = user.current_sign_in_ip
    .row
    = 'last_sign_in_ip'.humanize
    = user.last_sign_in_ip
  .card-footer 
    Courses Created: 
    = user.courses_count
    .row
    Enrollments: 
    = user.enrollments_count
    .row 
    .fa.fa-comment 
    Comments:
    = user.comments_count
  .card-footer 
    - if user.confirmed_at.present? 
      .badge.badge-success Yes 
    - else 
      .badge.badge-danger No
  .card-footer 
    - user.roles.each do |role|
      .badge.badge-info
        = role.name 
    - if current_user
      -if policy(user).edit?
        = link_to 'Edit Roles', edit_user_path(user), class: 'btn btn-sm btn-warning'